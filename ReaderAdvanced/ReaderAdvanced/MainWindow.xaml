<Window x:Class="ReaderAdvanced.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReaderAdvanced"
        mc:Ignorable="d"
        Title="Reader Advanced" Height="650" Width="900" MinWidth="240">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel>
                <Button Height="20" Content="Clear" Click="Button_Click"/>
                <Button Height="20" Content="Renew" Click="Button_Click_1"/>
                <Button Height="20" Content="Orientation" Click="Button_Click_2"/>
                <Button Height="20" Content="Save" Click="Button_Click_3"/>
                <Button Height="20" Content="Load" Click="Button_Click_4"/>
            </StackPanel>
            <ScrollViewer Grid.Row="1" x:Name="scrollView">
                <local:FrameEl HorizontalAlignment="Stretch" x:Name="element"/>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
